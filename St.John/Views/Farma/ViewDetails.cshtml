@model IEnumerable<St.John.Models.DatosFarma>

@{
    ViewBag.Title = "ViewDetails";
}

<h2>Detalle de Droga</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricpion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Origen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricpion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>


        </tr>

    }

</table>
<p>
    @Html.ActionLink("Regresar a lista de Pedidos", "VerListadoPedidos")
</p>
<p>
    @Html.ActionLink("Regresar a lista de Drogas", "Index")
</p>

